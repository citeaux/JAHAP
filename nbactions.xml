<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>run</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-classpath %classpath org.jahap.MainApp</exec.args>
                <exec.executable>java</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>debug</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath org.jahap.MainApp</exec.args>
                <exec.executable>java</exec.executable>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>profile</actionName>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
            </goals>
            <properties>
                <exec.args>${profiler.args} -classpath %classpath org.jahap.MainApp</exec.args>
                <exec.executable>${profiler.java}</exec.executable>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-flyaway:clean</actionName>
            <displayName>flyaway:clean</displayName>
            <goals>
                <goal>flyway:clean</goal>
                <goal>-e</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-flyaway:init</actionName>
            <displayName>flyaway:init</displayName>
            <goals>
                <goal>flyway:init</goal>
            </goals>
            <properties>
                <flyway.initVersion>1</flyway.initVersion>
                <flyway.initDescription>"Base version"</flyway.initDescription>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-flyway:migrate</actionName>
            <displayName>flyway:migrate</displayName>
            <goals>
                <goal>flyway:migrate</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-javancss:report</actionName>
            <displayName>javancss:report</displayName>
            <goals>
                <goal>javancss:report</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-site</actionName>
            <displayName>site</displayName>
            <goals>
                <goal>site</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-G</actionName>
            <displayName>G</displayName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
                
            </goals>
            <properties>
                <g></g>
            </properties>
        </action>
    </actions>
